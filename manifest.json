{
  "manifest_version": 3,
  "name": "ChatStack",
  "version": "1.1.0",
  "description": "为 ChatGPT、Gemini 添加智能侧边栏：TOC、双层 Projects、书签、阅读进度",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "lib/jszip.min.js",
        "core/storage.js",
        "core/i18n.js",
        "core/toc-manager.js",
        "core/project-manager.js",
        "core/bookmark-manager.js",
        "core/progress-manager.js",
        "content/platform-adapter.js",
        "content/chatgpt-adapter.js",
        "content/sidebar.js",
        "content/content.js"
      ],
      "css": [],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "lib/jszip.min.js",
        "core/storage.js",
        "core/i18n.js",
        "core/toc-manager.js",
        "core/project-manager.js",
        "core/bookmark-manager.js",
        "core/progress-manager.js",
        "content/platform-adapter.js",
        "content/gemini-adapter.js",
        "content/sidebar.js",
        "content/content.js"
      ],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/sidebar.css", "icons/float-icon.png"],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ]
    }
  ]
}
